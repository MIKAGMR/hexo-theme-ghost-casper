<section class="post-meta">
    <% if (post.author || config.author ) {%>
      <span> <%= post.author || config.author %></span>
    <% } %>
    <% if (post.tags && post.tags.length){ %>
    <% count = post.tags.length %>
    on <% post.tags.forEach(function(tag, index) { %>
    <a href='<%= config.root + tag.path %>'><%= tag.name %></a><% if (count !== index+1) { %>,<% } %>
    <% }); %>
    <% } %>
      <time datetime="<%= date_xml(post.date) %>" itemprop="datePublished" class="post-date">
          <%= date(post.date, null) %>
      </time>
</section>
