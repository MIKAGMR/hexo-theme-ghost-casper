<nav class="pagination" role="pagination">
  <% if (page.prev) { %>
  <a class="newer-posts" href="<%- url_for(page.prev.path) %>" title="<%- page.prev.title %>">
    ← Newer Post
  </a>
  <% } %>
  <span class="page-number">•</span>
  <% if (page.next) { %>
  <a class="older-posts" href="<%- url_for(page.next.path) %>" title="<%- page.next.title %>">
      Older Post →
  </a>
  <% } %>
</nav>
